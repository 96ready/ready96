.main-content.supplies(ng-controller="CitySuppliesController" ng-init="initialize('#{escape_javascript(@essentials)}', '#{escape_javascript(@usefuls)}', '#{escape_javascript(@personals)}', '#{escape_javascript(@kits)}')" )
  .screen-intro
    %p.screen-info This list provides a list of essential, useful, and personal supplies people can gather before an emergency. Use the pre-populated supplies list below, or swap out an item as needed. 
    .action-area
      %a.btn.btn-primary{:href => "#"} Save Changes

  %h2 Essential Supplies
  %ul.editable-list
    %li(ng-repeat="essential in essentials")
      .list-element
        .img
        %h3 {{essential.title}}
        %p {{essential.use_case}}
      .list-actions
        %button.btn{type: "button"} Edit

  %h2 Useful Supplies
  %ul.editable-list
    %li(ng-repeat="useful in usefuls")
      .list-element
        .img
        %h3 {{useful.title}}
        %p {{useful.use_case}}
      .list-actions
        %button.btn{type: "button"} Edit

  %h2 Personal Supplies
  %ul.editable-list
    %li(ng-repeat="personal in personals")
      .list-element
        .img
        %h3 {{personal.title}}
        %p {{personal.use_case}}
      .list-actions
        %button.btn{type: "button"} Edit

  %h2 Supplies to share
  %ul.editable-list
    %li(ng-repeat="kit in kits")
      .list-element
        .img
        %h3 {{kit.title}}
        %p 
      .list-actions
        %button.btn{type: "button"} Edit

  .form-actions
    %a.btn.btn-primary{:href => "#"} Save Changes 

  %edit-supply-modal