= provide(:title, 'Gather Supplies')
= javascript_include_tag "supplies"
.main-container.things
  = render :partial => "partials/header"
  .opening.supplies
    %h1
      =t (:youre_more_prepared)
    %div
      %p 
        =t (:youre_more_prepared_explained)
  .action-bar
    %ul.tabs
      %li.essentials-trigger.active
        %a{href:"#tab-essentials-content"}
          =t (:essentials)
      %li
        %a{href:"#tab-useful-content"}
          =t (:useful)
      %li
        %a{href:"#tab-personal-content"}
          =t (:personal)
  %ul.tabs-content 
    %li.tab-essentials-content
      %p.tab-tip
        =t (:essentials_why)
      %ul.things-list.essential
        -# - @essentials.each do |item|
        %li
          .use-case-dialog
            -# #{item.use_case}
          -# = retina_image_tag item.image, item.title
          %h4 
            =t (:water)
          %p.overlay-text 
            =t (:water_why)
    %li.tab-useful-content
      %p.tab-tip 
        =t (:useful_why)
      %ul.things-list.useful
        - @useful.each do |item|
          %li
            .use-case-dialog
              #{item.use_case}
            = retina_image_tag item.image, item.title
            %h4 #{item.title}
            %p.overlay-text #{item.use_case}
    %li.tab-personal-content
      %p.tab-tip 
        =t (:personal_why)
      
      %ul.things-list.personal
        - @personal.each do |item|
          %li
            .use-case-dialog
              #{item.use_case}
            = retina_image_tag item.image, item.title
            %h4 #{item.title}
            %p.overlay-text #{item.use_case}
  .kits
    %h2 
      =t (:sharing_is)
    %p 
      =t (:sharing_why)
    %ul.kits-list
      - @kits.each do |kit|
        %li
          = retina_image_tag kit.image, kit.title
          %span #{kit.title}
  = render :partial => "partials/footer"