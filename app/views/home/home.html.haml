= javascript_include_tag "home"
.main-container.home
  = render :partial => "partials/header"
  .page-intro
    .home-title{:style => "background-image: url(#{"/assets/static/medium-warriors-pic.jpg"})"}
      %h1
        = t(:hero_image_text)
  .questions.myrow
    .col-xs-12
      %h2
        = t(:we_believe)
      %span
        = t(:motto_explained)
  .connection
    .down-arrow
      %h2
        = t(:what_is)
      %span
        = t(:what_text)
    .home-map
      %iframe.map{'pointer-events' => 'none', src: @emergency_data.map_url, height: "498", width: '100%'}

    %a{href: '/em/home'}
      .map-button
        View Larger Map

  %a{href: '/em/home#mobile-updates'}
    .mobile-twitter-option.mybold
      .col-xs-9
        Read updates from Twitter.
      .col-xs-3.right-flush.arrow
        
  .tw-tabs-container.mobile-home{style: 'margin-top: -5px;'}
    %ul.tw-tabs
      %li.active#citizen-updates-tab
        %a.tab-1{href:"#tab-one"}
          %h3
            = t(:official_updates)
      %li#official-reports-tab
        %a.tab-2{href:"#tab-two"}
          %h3
            = t(:partner_updates)
      %li#transportation-updates-tab
        %a.tab-3{href:"#tab-three"}
          %h3
            = t(:transportation_updates)
  .main-container.home-updates-wrapper.mobile-home{style: 'overflow: hidden'}
    = render 'twitter_widget'
  .learn
    %h1
      = t(:good_news)
      </br>
      = t(:learn_more)
    %ul
      %li
        %a.learn-connect{href:"/connect"}
          %h2
            = t(:get_connected)
          %p
            = t(:gc_explained)
      %li
        %a.learn-supplies{href:"/supplies"}
          %h2
            = t(:sup)
          %p
            = t(:sup_explained)
      %li
        %a.learn-plan{href:"/plan"}
          %h2
            = t(:mp)
          %p
            = t(:mp_explained)
  = render :partial => "partials/footer"
